<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="fleet_vehicle_configuration_view_form" model="ir.ui.view">
        <field name="model">fleet.vehicle.configuration</field>
        <field
            name="inherit_id"
            ref="fleet_vehicle_configuration.fleet_vehicle_configuration_view_form"
        />
        <field name="arch" type="xml">
            <field name="max_seats" position="after">
                <field name="specific_product_id" />
                <field name="specific_max_seats" />
            </field>
        </field>
    </record>
    <record id="fleet_vehicle_configuration_view_tree" model="ir.ui.view">
        <field name="model">fleet.vehicle.configuration</field>
        <field
            name="inherit_id"
            ref="fleet_vehicle_configuration.fleet_vehicle_configuration_view_tree"
        />
        <field name="arch" type="xml">
            <field name="max_seats" position="after">
                <field name="specific_product_id" />
                <field name="specific_max_seats" />
            </field>
        </field>
    </record>

</odoo>
